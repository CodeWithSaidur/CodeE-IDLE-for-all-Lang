{
  "name": "scode",
  "version": "1.0.0",
  "description": "SCode - A modern code editor built with Electron and Bun",
  "author": "Saidur",
  "license": "MIT",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "build": "electron-builder"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "electron": "28",
    "electron-builder": "^26.8.1"
  },
  "build": {
    "appId": "com.scode.editor",
    "productName": "SCode",
    "copyright": "Copyright Â© 2026 Saidur",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "src/**/*",
      "renderer/**/*",
      "package.json"
    ],
    "asar": true,
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "installerIcon": "assets/icon.png",
      "uninstallerIcon": "assets/icon.png"
    }
  },
  "dependencies": {
    "monaco-editor": "^0.55.1"
  }
}
